    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อเรื่อง"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/imageButton6"
            android:layout_toRightOf="@+id/imageButton6"
            android:layout_toEndOf="@+id/imageButton6"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายละเอียด"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textClock"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/msgbox"
            android:textColor="#000000"
            android:textSize="15sp"
            android:hint="แตะเพื่อแก้ไข"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageButton6"
            android:background="@drawable/arrow_back"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/msgbox"
            android:layout_alignStart="@+id/msgbox"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="10dp" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_below="@+id/msgbox"
            android:layout_alignRight="@+id/msgbox"
            android:layout_alignEnd="@+id/msgbox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="แตะเพื่อแก้ไข"
            android:textColor="#000000"
            android:gravity="top"
            android:visibility="visible"
            android:textSize="15sp"
            android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/textClock"
            android:layout_alignEnd="@+id/textClock"
            android:layout_alignLeft="@+id/msgbox"
            android:layout_alignStart="@+id/msgbox"
            android:layout_above="@+id/cancelButton" />

        <Button
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:text="ยกเลิก"
            android:id="@+id/cancelButton"
            android:textColor="#000000"
            android:background="#D3D3D3"
            android:singleLine="true"
            android:textSize="15dp"
            android:layout_above="@+id/imageButton"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_marginBottom="24dp"
            android:layout_toLeftOf="@+id/picButton"
            android:layout_toStartOf="@+id/picButton" />

        <Button
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:text="เสร็จสิ้น"
            android:id="@+id/saveButton"
            android:textColor="#000000"
            android:background="#ffff8800"
            android:singleLine="true"
            android:textSize="15dp"
            android:layout_alignTop="@+id/cancelButton"
            android:layout_toRightOf="@+id/cancelButton"
            android:layout_alignRight="@+id/editText"
            android:layout_alignEnd="@+id/editText" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/picButton"
            android:background="@drawable/picture"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cameraButton"
            android:background="@drawable/camera"
            android:layout_alignTop="@+id/picButton"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:background="@drawable/clock"
            android:layout_alignTop="@+id/cameraButton"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/microButton"
            android:background="@drawable/microphoneeeeeee"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_alignTop="@+id/picButton"
            android:layout_toLeftOf="@+id/textClock"
            android:layout_toStartOf="@+id/textClock" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/listButton"
            android:background="@drawable/list"
            android:layout_alignTop="@+id/microButton"
            android:layout_alignRight="@+id/saveButton"
            android:layout_alignEnd="@+id/saveButton" />
    </RelativeLayout>




</RelativeLayout>
